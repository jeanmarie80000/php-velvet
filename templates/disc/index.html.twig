{% extends 'base.html.twig' %}

{% block title %}Disc index{% endblock %}

{% block body %}
    <h1>Disc index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Picture</th>
                <th>Label</th>
                <th>Artiste</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for disc in discs %}
            <tr>
                <td>{{ disc.id }}</td>
                <td>{{ disc.title }}</td>
                <td>{{ disc.picture }}</td>
                <td>{{ disc.label }}</td>
                <td>{{ disc.artist }}</td>
                <td>
                    <a href="{{ path('app_disc_show', {'id': disc.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_disc_edit', {'id': disc.id}) }}" class="btn btn-secondary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_disc_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
