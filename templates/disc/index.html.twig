{% extends 'base.html.twig' %}

{% block title %}Disc index{% endblock %}

{% block body %}


    <h1>Disc index</h1>

    <div class="row">
    {% for disc in discs %}
        <div class="d-flex card col-2 ml-3">
            <div>
                <div class="card-header">
                    <h3>{{ disc.id }}. {{ disc.title }}</h3>        
                </div>

                <div class="card-body">
                    <img src='{{ disc.picture }}' class="card-img-top"
                    alt="img_jaquette_card" width="auto" height="auto"></img>
                    <br>
                    <ul class="col-12">
                        <li class="list-group-item">Label : {{ disc.label }}</li>
                        <li class="list-group-item">Prix : {{ disc.price }} â‚¬</li>
                        <li class="list-group-item">Artiste : {{ disc.artist }}</li>
                    </ul>
                    <div class="d-flex justify-content-center">
                        <a href="{{ path('app_disc_show', {'id': disc.id}) }}" class="btn btn-primary">Show</a>
                        <a href="{{ path('app_disc_edit', {'id': disc.id}) }}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        </div>

        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
    </div>
    
    <a href="{{ path('app_disc_new') }}" class="btn btn-success m-3">Create new</a>

{% endblock %}
